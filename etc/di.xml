<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Rejoiner\Acr\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">rejoineracr</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="detailed" xsi:type="object">Rejoiner\Acr\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Rejoiner\Acr\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Rejoiner\Acr\Block\Adminhtml\Form\Field\Google">
        <arguments>
            <argument name="data"  xsi:type="array">
                <item name="source_renderer_block_type" xsi:type="string">Rejoiner\Acr\Block\Adminhtml\Form\Field\Source</item>
            </argument>
        </arguments>
    </type>
</config>
